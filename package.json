{
  "name": "icalingua-plus-plus",
  "workspaces": [
    "icalingua",
    "icalingua-bridge-oicq",
    "packages/*"
  ],
  "dependencies": {
    "@actions/core": "1.10.0",
    "@icalingua/storage-providers": "workspace:*",
    "@icalingua/types": "workspace:*",
    "icalingua": "workspace:*",
    "icalingua-bridge-oicq": "workspace:*"
  },
  "packageManager": "pnpm@7.8.0",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "icalingua/**/*": [
      "prettier --write"
    ],
    "icalingua-bridge-oicq/**/*": [
      "prettier --write"
    ],
    "packages/**/*": [
      "prettier --write"
    ]
  }
}
